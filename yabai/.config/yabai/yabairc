# ~/.config/yabai/yabairc

# float layout unless display is connected
yabai -m config layout float
yabai -m signal --add event=display_added action="yabai -m config layout bsp"
yabai -m signal --add event=display_removed action="yabai -m config layout float"

# set padding
yabai -m config top_padding 10
yabai -m config bottom_padding 10
yabai -m config left_padding 10
yabai -m config right_padding 10
yabai -m config window_gap 10

# window opacity
yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.95

# float system preferences
yabai -m rule --add app="^System Preferences$" manage=off

# float qemu
yabai -m rule --add title="^QEMU$" manage=off
