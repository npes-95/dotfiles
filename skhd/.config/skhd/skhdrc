# ~/.config/skhd/skhdrc

# yabai shortcuts

# spaces

# focus next workspace or wrap
cmd - right : yabai -m space --focus next || yabai -m space --focus first

# focus prev workspace or wrap
cmd - left : yabai -m space --focus prev || yabai -m space --focus last

# create space on active display
ctrl + alt - n : yabai -m space --create 

# destroy space on active display
ctrl + alt - d : yabai -m space --destroy

# send to next space
ctrl + alt - up : yabai -m window --space next && yabai -m space --focus next

# send to previous space
ctrl + alt - down : yabai -m window --space prev  && yabai -m space --focus prev 


# windows

# focus next or wrap
ctrl + alt - right : yabai -m window --focus next || yabai -m window --focus first

# focus prev or wrap
ctrl + alt - left : yabai -m window --focus prev || yabai -m window --focus last

# swap L-R
ctrl + alt - l : yabai -m window --swap east

# swap R-L
ctrl + alt - k : yabai -m window --swap west

# float window
ctrl + alt - f : yabai -m window --toggle float

# shrink floating window 
ctrl + alt - 9 : yabai -m window --resize bottom_right:-30:-30

# enlarge floating window
ctrl + alt - 0 : yabai -m window --resize bottom_right:30:30


# programs
ctrl + alt - return : open -n -a alacritty
